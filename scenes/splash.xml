<?xml version="1.0" encoding="UTF-8"?>
<scene id="splash" name="Splash Screen">

    <define name="companyName">{red}Bailes + Light</define>
    <define name="systemName">{yellow}LightBoard Display System</define>
    <define name="version">{green}Version 2.0</define>

    <define name="logoFilename">gp192x32.jpg</define>

    <define name="typeInDuration">1200</define>
    <define name="explodeOutDuration">800</define>

    <textzone id="company">
        <font>SmallFont</font>
        <offset x="0" y="-9"/>
        <in-transition duration=":typeInDuration">TypeIn</in-transition>
        <out-transition duration=":explodeOutDuration">ExplodeOut</out-transition>
        <display-time>3000</display-time>
        <canvas-layer>1</canvas-layer>
        <auto-start/>
        <message>:companyName</message>
    </textzone>

    <textzone id="system">
        <font>SimpleFont</font>
        <in-transition duration=":typeInDuration">TypeIn</in-transition>
        <out-transition duration=":explodeOutDuration">ExplodeOut</out-transition>
        <display-time>3000</display-time>
        <canvas-layer>2</canvas-layer>
        <message>:systemName</message>
    </textzone>

    <textzone id="version">
        <font>SmallFont</font>
        <offset x="0" y="9"/>
        <in-transition duration=":typeInDuration">TypeIn</in-transition>
        <out-transition duration=":explodeOutDuration">ExplodeOut</out-transition>
        <display-time>2000</display-time>
        <canvas-layer>3</canvas-layer>
        <message>:version</message>
    </textzone>

    <textzone id="webstatus">
        <font>SmallFont</font>
        <in-transition duration="800">ExplodeIn</in-transition>
        <out-transition duration="800">InterlaceOut</out-transition>
        <display-time>5000</display-time>
        <canvas-layer>1</canvas-layer>
        <auto-out/>
        <message>:webStatus</message>
    </textzone>

    <imagezone id="gplogo" src=":logoFilename">
        <display-time>3000</display-time>
        <in-transition duration="2000">RainIn</in-transition>
        <out-transition duration="1500">ExplodeOut</out-transition>
        <auto-out/>
    </imagezone>

    <domino>
        <trigger action="in">company</trigger>
        <target action="in">system</target>
    </domino>
    <domino>
        <trigger action="in">system</trigger>
        <target action="in">version</target>
    </domino>
    <domino>
        <trigger action="display">version</trigger>
        <target action="out">company,system,version</target>
    </domino>
    <domino>
        <trigger action="out" progress="0.4">version</trigger>
        <target action="in">webstatus</target>
    </domino>
    <domino>
        <trigger action="out">webstatus</trigger>
        <target action="in">gplogo</target>
    </domino>
    <domino>
        <trigger action="out">gplogo</trigger>
        <target action="in">company</target>
    </domino>

</scene>