<?xml version="1.0" encoding="UTF-8"?>
<scene>

    <textzone id="day">
        <tick>30</tick>
        <default-colour>red</default-colour>
        <font>SimpleFont</font>
        <region left="0" top="4" width="50" height="9"/>
        <in-transition duration="300" edge="bottom">ScrollIn</in-transition>
        <out-transition duration="300" edge="right">ScrollOut</out-transition>
        <display-time>100</display-time>
        <canvas-layer>1</canvas-layer>
        <align-horizontal>right</align-horizontal>
        <auto-start/>
    </textzone>

    <textzone id="time">
        <tick>30</tick>
        <default-colour>green</default-colour>
        <region left="0" top="13" width="50" height="9"/>
        <in-transition duration="300" edge="top">ScrollIn</in-transition>
        <out-transition duration="300" edge="right">ScrollOut</out-transition>
        <display-time>200</display-time>
        <align-horizontal>right</align-horizontal>
        <canvas-layer>1</canvas-layer>
    </textzone>

    <textzone id="eventname">
        <tick>30</tick>
        <region left="53" top="1" height="23" width="250"/>
        <!--<offset x="43"/>-->
        <align-horizontal>left</align-horizontal>
        <align-vertical>top</align-vertical>
        <font>GreenpeaceFont</font>
        <in-transition duration="900">TypeIn</in-transition>
        <out-transition duration="1000">InterlaceOut</out-transition>
        <display-time>300</display-time>
        <canvas-layer>2</canvas-layer>
    </textzone>

    <textzone id="description1">
        <region left="52" top="26" height="9" width="250"/>
        <font>SimpleFont</font>
        <align-horizontal>left</align-horizontal>
        <canvas-layer>3</canvas-layer>
        <display-time>300</display-time>
        <in-transition duration="800" edge="top">TypeIn</in-transition>
        <out-transition duration="1100" edge="left">InterlaceOut</out-transition>
    </textzone>

    <textzone id="description2">
        <region left="53" top="35" height="9" width="250"/>
        <font>SimpleFont</font>
        <align-horizontal>left</align-horizontal>
        <canvas-layer>4</canvas-layer>
        <display-time>6000</display-time>
        <in-transition duration="800" edge="top">TypeIn</in-transition>
        <out-transition duration="1200" edge="left">InterlaceOut</out-transition>
    </textzone>

    <!--<textzone id="scroller">-->
        <!--<tick>5</tick>-->
        <!--<region left="0" top="23" height="50" width="256"/>-->
        <!--<in-transition duration="8000" speed="1" edge="right">ScrollIn</in-transition>-->
        <!--<out-transition duration="8000" speed="1" edge="left">ScrollOut</out-transition>-->
        <!--<display-time>0</display-time>-->
        <!--<canvas-layer>4</canvas-layer>-->
        <!--<auto-start/>-->
        <!--<auto-out/>-->
        <!--<auto-next/>-->
    <!--</textzone>-->

    <domino>
        <trigger action="display">day</trigger>
        <target action="in">time</target>
    </domino>

    <domino>
        <trigger action="display">time</trigger>
        <target action="in">eventname</target>
    </domino>

    <domino>
        <trigger action="display">eventname</trigger>
        <target action="in">description1</target>
    </domino>

    <domino>
        <trigger action="display">description1</trigger>
        <target action="in">description2</target>
    </domino>

    <domino>
        <trigger action="display">description2</trigger>
        <target action="out">day,time,eventname,description1,description2</target>
    </domino>

    <domino>
        <trigger action="out">eventname</trigger>
        <target action="in">day</target>
    </domino>

    <group id="events">day,time,eventname,description1,description2</group>
    <!--<group id="scroller">scroller</group>-->

</scene>