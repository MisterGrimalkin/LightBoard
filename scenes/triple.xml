<?xml version="1.0" encoding="UTF-8"?>
<scene>

    <define name="explodeTime">100</define>
    <define name="displayTime">6000</define>
    <define name="progress">0.9</define>
    <define name="offset">5</define>

    <textzone id="one">
        <font>LargeFont</font>
        <tick>30</tick>
        <offset x=":offset" y="-9"/>
        <default-colour>green</default-colour>
        <in-transition duration=":explodeTime">ExplodeIn</in-transition>
        <out-transition duration=":explodeTime">ExplodeOut</out-transition>
        <display-time>:displayTime</display-time>
        <align-horizontal>left</align-horizontal>
        <canvas-layer>1</canvas-layer>
        <auto-start/>
    </textzone>

    <textzone id="two">
        <font>LargeFont</font>
        <tick>30</tick>
        <default-colour>yellow</default-colour>
        <in-transition duration=":explodeTime">ExplodeIn</in-transition>
        <out-transition duration=":explodeTime">ExplodeOut</out-transition>
        <align-horizontal>centre</align-horizontal>
        <display-time>:displayTime</display-time>
        <canvas-layer>2</canvas-layer>
    </textzone>

    <textzone id="three">
        <font>LargeFont</font>
        <tick>30</tick>
        <offset x="-:offset" y="9"/>
        <default-colour>red</default-colour>
        <in-transition duration=":explodeTime">ExplodeIn</in-transition>
        <out-transition duration=":explodeTime">ExplodeOut</out-transition>
        <display-time>:displayTime</display-time>
        <align-horizontal>right</align-horizontal>
        <canvas-layer>3</canvas-layer>
    </textzone>

    <domino>
        <trigger action="in">one</trigger>
        <target action="in">two</target>
    </domino>

    <domino>
        <trigger action="in">two</trigger>
        <target action="in">three</target>
    </domino>

    <domino>
        <trigger action="display" >three</trigger>
        <target action="out">one</target>
    </domino>

    <domino>
        <trigger action="out">one</trigger>
        <target action="out">two</target>
    </domino>

    <domino>
        <trigger action="out">two</trigger>
        <target action="out">three</target>
    </domino>

    <domino>
        <trigger action="out">three</trigger>
        <target action="exit"/>
    </domino>

    <group id="messages">one,two,three</group>

</scene>