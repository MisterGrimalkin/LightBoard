<?xml version="1.0" encoding="UTF-8"?>
<scene>

    <define name="scrollTime">200</define>

    <textzone id="message">
        <tick>20</tick>
        <font>GreenpeaceFont</font>
        <in-transition speed="1" edge="right">ScrollIn</in-transition>
        <out-transition speed="1" edge="left">ScrollOut</out-transition>
        <display-time>0</display-time>
        <auto-start/>
        <auto-next/>
        <auto-out/>
    </textzone>

    <domino>
        <trigger action="out">message</trigger>
        <target action="exit"/>
    </domino>

    <group id="message">message</group>

</scene>