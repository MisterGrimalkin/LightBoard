<?xml version="1.0" encoding="UTF-8"?>
<scene>

    <define name="scrollTime">200</define>

    <textzone id="message">
        <tick>20</tick>
        <font>LargeFont</font>
        <in-transition duration="2000">RainIn</in-transition>
        <out-transition duration=":scrollTime">ExplodeOut</out-transition>
        <display-time>4000</display-time>
        <auto-start/>
        <auto-next/>
        <auto-out/>
    </textzone>

    <domino>
        <trigger action="out">message</trigger>
        <target action="exit"/>
    </domino>

    <group id="message">message</group>

</scene>